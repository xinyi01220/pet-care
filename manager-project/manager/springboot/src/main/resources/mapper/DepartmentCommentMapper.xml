<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.DepartmentCommentMapper">

    <sql id="Base_Column_List">
        id,user_id,department_id,parent_id,content,time
    </sql>

    <select id="selectAll" resultType="com.example.entity.DepartmentComment">
        select department_comment.*, user.name as userName, user.avatar as userAvatar,department.name as departmentName
        from department_comment
        left join user on department_comment.user_id = user.id
        left join department on department_comment.department_id = department.id
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="content != null"> and content like concat('%', #{content}, '%')</if>
            <if test="userId != null"> and user_id= #{userId}</if>
            <if test="time != null"> and time= #{time}</if>
            <if test="departmentId != null"> and department_id= #{departmentId}</if>
            <if test="parentId != null"> and parent_id= #{parentId}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.DepartmentComment">
        select
        <include refid="Base_Column_List" />
        from department_comment
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from department_comment
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.DepartmentComment" useGeneratedKeys="true">
        insert into department_comment
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="userId != null">user_id,</if>
                <if test="content != null">content,</if>
                <if test="time != null">time,</if>
                <if test="departmentId != null">department_id,</if>
                <if test="parentId != null">parent_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="userId != null">#{userId},</if>
                <if test="content != null">#{content},</if>
                <if test="time != null">#{time},</if>
                <if test="departmentId != null">#{departmentId},</if>
                <if test="parentId != null">#{parentId},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.DepartmentComment">
        update department_comment
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="departmentId != null">
                department_id = #{departmentId},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>